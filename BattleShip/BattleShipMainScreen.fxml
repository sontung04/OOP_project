<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootpane" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BattleShip.ScreenController">
   <children>
      <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Image/Background.jpg" />
         </image>
      </ImageView>
      <Button layoutX="150.0" layoutY="540.0" mnemonicParsing="false" onAction="#switchToDifficultySelectionScreen" prefHeight="100.0" prefWidth="600.0" stylesheets="@../Button.css" text="New Game" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <Button fx:id="continueButton" layoutX="150.0" layoutY="690.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="600.0" stylesheets="@../Button.css" text="Continue" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <Button fx:id="quitButton" layoutX="150.0" layoutY="840.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="600.0" stylesheets="@../Button.css" text="Quit" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
